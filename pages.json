{
  "pages": [
    //pages数组中第一项表示应用启动页，参考：https://uniapp.dcloud.io/collocation/pages
    {
      "path": "pages/index/index",
      "style": {
        "navigationBarTitleText": "快回收"
      }
    },
    {
      "path": "pages/welfare/index",
      "style": {
        "navigationBarTitleText": "福利"
      }
    },
    {
      "path": "pages/user/index",
      "style": {
        "navigationBarTitleText": "我的"
      }
    },
    {
      "path": "pages/welfare/goods-detail/goods-detail",
      "style": {
        "navigationBarTitleText": "商品详情",
        "navigationBarBackgroundColor": "#fff"
      }
    },
    {
      "path": "pages/user/online-service/online-service",
      "style": {
        "navigationBarTitleText": "在线客服",
        "navigationBarBackgroundColor": "#fff"
      }
    },
    {
      "path": "pages/order/index",
      "style": {
        "navigationBarTitleText": "填写回收信息"
      }
    }
  ],
  "globalStyle": {
    "navigationBarTextStyle": "black",
    "navigationBarTitleText": "快回收",
    "navigationBarBackgroundColor": "#ffc903",
    "backgroundColor": "#ffc903",
    "app-plus": {
      "titleNView": {
        "type": "transparent"
      }
    }
  },
  "tabBar": {
    "color": "#8a8a8a",
    "selectedColor": "#000",
    "list": [
      {
        "text": "首页",
        "pagePath": "pages/index/index",
        "iconPath": "static/icon/home.png",
        "selectedIconPath": "static/icon/home-active.png"
      },
      {
        "iconPath": "static/icon/welfare.png",
        "pagePath": "pages/welfare/index",
        "selectedIconPath": "static/icon/welfare-active.png",
        "text": "福利"
      },
      {
        "iconPath": "static/icon/my.png",
        "pagePath": "pages/user/index",
        "selectedIconPath": "static/icon/my-active.png",
        "text": "我的"
      }
    ]
  },
  "uniIdRouter": {},
  "easycom": {
    "autoscan": true,
    "custom": {
      "^uni-(.*)": "@/components/uni-$1.vue", // 匹配components目录内的vue文件
      "^vue-file-(.*)": "packageName/path/to/vue-file-$1.vue" // 匹配node_modules内的vue文件
    }
  }
}
